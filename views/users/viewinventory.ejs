<% layout("/layouts/boilerplate") %>

  <style>
    /* Custom styles for the page */
    body {
      background-color: #212529; /* Dark background color for the page */
      color: #fff; /* White text color */
    }
    @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@500&display=swap');

.inventory-list {
    font-family: 'Roboto Mono', monospace; /* Modern and clean font */
    font-size: 3rem;
    color: #333; /* Dark text for white background */
    text-align: center;
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    border-right: 2px solid #333; /* Creates the typing cursor effect */
    animation: typing 3s steps(15) 1s forwards, blink-caret 0.75s step-end infinite;
}

/* Typing Effect */
@keyframes typing {
    0% {
        width: 0;
    }
    100% {
        width: 100%;
    }
}

/* Blinking Cursor */
@keyframes blink-caret {
    50% {
        border-color: transparent;
    }
}


    .container1 {
      background-color: #f8f9fa; /* Light background for the content */
      padding: 30px;
      border-radius: 10px;
      margin-top: 50px;
      color: #212529; /* Dark text color for readability inside the content */
      margin-bottom: 50px;
    }

    .table-container1 {
      background-color: #ffffff; /* Light background for the table container */
      padding: 30px;
      border-radius: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 15px;
      text-align: center;
    }

    th {
      background-color: #343a40;
      color: #fff; /* White text color for table headers */
    }

    tr:nth-child(even) {
      background-color: #495057;
    }

    tr:hover {
      background-color: #6c757d;
    }

    .btn-custom {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-custom:hover {
      background-color: #218838;
    }

    .btn-delete {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-delete:hover {
      background-color: #c82333;
    }
    a{
        text-decoration: none;

    }
    h1{
        text-align: center;
    }
  </style>
</head>
<body>

  <div class="container1">
    <h1 class="inventory-list">Inventory List</h1>
    <% if (inventoryItems && inventoryItems.length > 0) { %>
      <div class="table-container1">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Item Name</th>
              <th>Expiry Date</th>
              <th>Quantity</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% inventoryItems.forEach(item => { %>
              <tr>
                <td><%= item.itemName %></td>
                <td><%= item.expiryDate.toISOString().slice(0, 10) %></td>
                <td><%= item.quantity %></td>
                <td>
                  <form action="/inventory/delete/<%= item._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p>No items in inventory.</p>
    <% } %>
     <div class="d-flex justify-content-center mt-4">
      <a href="/inventory" class="btn-custom">Go Back to Inventory</a>
    </div>
  </div>



