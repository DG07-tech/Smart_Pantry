<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Your Cart</title>
</head>
<body>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        header {
            background-color: #4CAF50;
            color: white;
            padding: 1rem 2rem;
            text-align: center;
        }

        main {
            padding: 2rem;
        }

        h1, h2 {
            color: #4CAF50;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            background-color: white;
            margin: 0.5rem 0;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button, .back-btn {
            background-color: #4CAF50;
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 1rem;
            cursor: pointer;
        }

        button:hover, .back-btn:hover {
            background-color: #45a049;
        }
    </style>

    <header>
        <h1>Your Cart</h1>
    </header>

    <main>
        <section>
            <h2>Items in Cart</h2>
            <ul>
                <% cartItems.forEach(item => { %>
                    <li>
                        <%= item.name %> - Quantity: <%= item.cartQuantity %>
                        <!-- Update cart quantity -->
                        <form action="/inventory/updateCart/<%= item._id %>" method="POST" style="display:inline;">
                            <input type="number" name="quantity" value="<%= item.cartQuantity %>" min="1" required>
                            <button type="submit">Update</button>
                        </form>
                        <!-- Remove item from cart -->
                        <form action="/inventory/removeFromCart/<%= item._id %>" method="POST" style="display:inline;">
                            <button type="submit">Remove</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>

        <a class="back-btn" href="/">Back to Home</a>
    </main>
</body>
</html>
