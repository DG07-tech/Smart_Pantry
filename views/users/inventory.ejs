<% layout("/layouts/boilerplate") %>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
<style>
body {
  font-family: 'Montserrat', sans-serif;
  color: #fff;
  height: 100vh;
}

.form-container {
  margin-left: 450px;
  justify-content: center !important;
  align-items: center!important;
  background: rgba(255, 255, 255, 0.1);
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  width: 100%;
  max-width: 400px;
}

h1 {
  text-align: center;
  margin-bottom: 20px;
  font-size: 1.8em;
}

.form-group {
  margin-bottom: 15px;
  }
label {
  display: block;
  font-size: 1em;
  margin-bottom: 5px;
}
input:hover{
  color: #34c759;
}
input {
  width: 100%;
  padding: 10px;
  font-size: 1em;
  border: none;
  border-radius: 5px;
}

input:focus {
  outline: none;
  box-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
}
.form-group input:focus{
  border-color: #0066cc; /* Light blue focus */
  box-shadow: 0 0 5px rgba(0, 102, 204, 0.8); /* Subtle glow on focus */
}
.submit-btn {
  width: 100%;
  padding: 10px;
  font-size: 1.2em;
  background: #070607;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.submit-btn:hover {
  background: #f9fafc;
  color: black;
}

@media (max-width: 480px) {
  .form-container {
    padding: 15px;
  }
}

.animated-heading {
  font-family: 'Montserrat', sans-serif;
  font-size: 1.5rem;
  text-align: center;
  color: #2a9df4;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  animation: pulse 3s infinite ease-in-out, textColorShift 6s infinite;
}

/* Smooth pulsing effect */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* Gradual text color shifting */
@keyframes textColorShift {
  0% {
    color: #2a9df4; /* Blue */
  }
  25% {
    color: #34c759; /* Green */
  }
  50% {
    color: #ff9500; /* Orange */
  }
  75% {
    color: #ff3b30; /* Red */
  }
  100% {
    color: #2a9df4; /* Back to Blue */
  }
}

</style>

<body>
    <div class="form-container">
      <h1 class="animated-heading">Add Inventory Item</h1>
        <form id="inventoryForm" action="/inventory/add" method="POST">
          <div class="form-group">
            <label for="itemName">Inventory Name</label>
            <input type="text" id="itemName" name="itemName" placeholder="Enter item name" required>
          </div>
          <div class="form-group">
            <label for="expiryDate">Expiry Date</label>
            <input type="date" id="expiryDate" name="expiryDate" required>
          </div>
          <div class="form-group">
            <label for="itemCount">Quantity</label>
            <input type="number" id="itemCount" name="quantity" placeholder="Enter quantity" min="1" required>
          </div>
          <button type="submit" class="submit-btn">Add Item</button>
        </form>
      </div>
</body>
