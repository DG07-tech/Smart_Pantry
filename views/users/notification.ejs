<% layout("/layouts/boilerplate") %>

<div class="text-center mt-5">
  <h1 class="display-4">Inventory Notifications</h1>

  <div class="mt-4">
    <% if (upcomingExpiry.length > 0) { %>
    <ul class="list-group mx-auto" style="max-width: 600px">
      <% upcomingExpiry.forEach(item => { %>
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        <strong class="text-danger"><%= item.itemName %></strong>
        <span class="badge bg-warning text-dark"
          >Expires on <%= item.expiryDate.toDateString() %></span
        >
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p class="text-muted mt-3">No items nearing expiry in the next 7 days.</p>
    <% } %>
  </div>

  <a href="/home" class="btn btn-outline-primary mt-4">Go back to Home</a>
</div>
