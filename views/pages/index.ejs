<% layout("/layouts/boilerplate") %>
<style>
.hero {
    position: relative;
    overflow: hidden;
    background-color: #f0f0f0; /* Light background */
}

.container2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* Spacing between h2 and h4 */
.animated-text {
    margin-bottom: 1.5rem; /* Add space between h2 and h4 */
    font-size: 2.5rem;
    color: #333333; /* Dark text */
    animation: textWave 2s ease-in-out infinite alternate;
}

.animated-subtext {
    margin-bottom: 2rem; /* Space below h4 for balance */
    font-size: 1.5rem;
    color: #666666; 
    animation: fadeIn 2s ease-in;
}

/* Button Animation */
.btn-animated {
    animation: pulseGlow 2s infinite;
}

/* Animations */
@keyframes textWave {
    0% {
        letter-spacing: 2px;
        color: rgba(34,139,34,0.4);
    }
    100% {
        letter-spacing: 6px;
        color: #004D40;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(10px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulseGlow {
    0% {
        box-shadow: 0 0 10px rgba(255, 165, 0, 0.8);
    }
    50% {
        box-shadow: 0 0 20px rgba(255, 165, 0, 1);
    }
    100% {
        box-shadow: 0 0 10px rgba(255, 165, 0, 0.8);
    }
}

</style>
