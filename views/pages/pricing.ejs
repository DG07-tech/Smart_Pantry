<% layout("/layouts/boilerplate") %>
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
  }
  .pricing-plan a {
    text-decoration: none; /* Removes underline */
    color: inherit;
  }
</style>

<header>
  <h1>Smart Pantry Subscription Plans</h1>
  <p>
    Choose the perfect plan to keep your pantry smart, efficient, and always
    stocked.
  </p>
</header>

<section class="pricing">
  <div class="pricing-plan">
    <h2>Basic Plan</h2>
    <p class="price">99Rs. / month</p>
    <ul>
      <li>Inventory management for up to 50 items</li>
      <li>Manual shopping list creation</li>
      <li>Basic recipe suggestions</li>
      <li>Email support</li>
    </ul>
    <button><a href="/payment">Choose Basic</a></button>
  </div>

  <div class="pricing-plan featured">
    <h2>Standard Plan</h2>
    <p class="price">499Rs. / month</p>
    <ul>
      <li>Inventory management for up to 200 items</li>
      <li>Automated shopping lists</li>
      <li>Advanced recipe suggestions</li>
      <li>Monthly pantry insights</li>
      <li>Email & phone support</li>
    </ul>
    <button><a href="/payment">Choose Standard</a></button>
  </div>

  <div class="pricing-plan">
    <h2>Premium Plan</h2>
    <p class="price">999Rs. / month</p>
    <ul>
      <li>Unlimited inventory management</li>
      <li>Automated shopping lists with recommendations</li>
      <li>Personalized recipe suggestions</li>
      <li>Weekly pantry insights & analytics</li>
      <li>24/7 dedicated support</li>
    </ul>
    <button><a href="/payment">Choose Premium</a></button>
  </div>
</section>
