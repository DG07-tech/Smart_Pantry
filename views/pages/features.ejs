<% layout("/layouts/boilerplate") %>
<style>
  /* Base styles */
  #header {
    text-align: center;
    padding: 2rem 0;
    background: #2c3e50;
    margin-bottom: 2rem;
  }

  .animated-header {
    font-size: 2.5rem;
    color: white;
    text-transform: uppercase;
    animation: fadeIn 1s ease-out;
  }

  .features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding: 0 1rem 2rem;
  }

  .card {
    width: calc(25% - 1rem);
    min-width: 250px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s;
    background: white;
  }

  .card:hover {
    transform: translateY(-8px);
  }

  .card-image {
    height: 180px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-text {
    padding: 1rem;
    position: relative;
  }

  .card-meal-type {
    background-color: #e74c3c;
    color: white;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    position: absolute;
    top: -12px;
    left: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }

  .card-title {
    margin: 1rem 0 0.5rem;
    color: #2c3e50;
    font-size: 1.25rem;
  }

  .card-body {
    color: #555;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  /* Simple animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Responsive breakpoints */
  @media (max-width: 1024px) {
    .card {
      width: calc(33.33% - 1rem);
    }
  }

  @media (max-width: 768px) {
    .card {
      width: calc(50% - 1rem);
    }
  }

  @media (max-width: 480px) {
    .animated-header {
      font-size: 1.8rem;
    }

    .card {
      width: 100%;
    }
  }
</style>

<div id="header">
  <h1 class="animated-header">Features</h1>
</div>

<div class="features">
  <div class="card">
    <a href="/dashboard/inventory" class="card-link">
      <div class="card-image">
        <img src="/images/inventory.jpeg" alt="Organized pantry shelves" />
      </div>
      <div class="card-text">
        <span class="card-meal-type">1</span>
        <h2 class="card-title">Manage Inventory</h2>
        <p class="card-body">
          Keep track of all your pantry items, update stock levels, and organize
          food essentials.
        </p>
      </div>
    </a>
  </div>

  <div class="card">
    <a href="/dashboard/recipes" class="card-link">
      <div class="card-image">
        <img
          src="/images/recipe suggestion.jpeg"
          alt="Recipe book with ingredients"
        />
      </div>
      <div class="card-text">
        <span class="card-meal-type">2</span>
        <h2 class="card-title">Recipe Suggestion</h2>
        <p class="card-body">
          Discover meal ideas based on what's already in your pantry with our
          smart suggestion system.
        </p>
      </div>
    </a>
  </div>

  <div class="card">
    <a href="/dashboard" class="card-link">
      <div class="card-image">
        <img
          src="/images/shoopinglist.jpeg"
          alt="Shopping list and groceries"
        />
      </div>
      <div class="card-text">
        <span class="card-meal-type">3</span>
        <h2 class="card-title">Shopping List</h2>
        <p class="card-body">
          Automatically create shopping lists for missing ingredients to
          complete your recipes.
        </p>
      </div>
    </a>
  </div>

  <div class="card">
    <a href="/dashboard" class="card-link">
      <div class="card-image">
        <img
          src="/images/notification.jpeg"
          alt="Smartphone with notifications"
        />
      </div>
      <div class="card-text">
        <span class="card-meal-type">4</span>
        <h2 class="card-title">Notifications</h2>
        <p class="card-body">
          Stay updated with alerts for expiring items, low stock, and other
          pantry management needs.
        </p>
      </div>
    </a>
  </div>
</div>
