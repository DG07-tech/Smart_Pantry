/* General Styles */
#header {
    text-align: center;
    padding: 2rem 0;
    background: rgba(0,0,0,0.4);
   
    position: relative;
}

/* Header Text Animation */
.animated-header {
    font-size: 3rem;
    color: white;
    text-transform: uppercase;
    letter-spacing: 4px;
    animation: zoomReveal 2s ease-out forwards; /* Add forwards to persist the final state */
    opacity: 0; /* Ensure hidden before animation starts */
}

/* Creative Animation */
@keyframes zoomReveal {
    0% {
        opacity: 0;
        transform: scale(0.5) rotateX(90deg);
    }
    50% {
        opacity: 0.8;
        transform: scale(1.2) rotateX(10deg);
    }
    100% {
        opacity: 1;
        transform: scale(1) rotateX(0deg);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .animated-header {
        font-size: 2.5rem;
        letter-spacing: 2px;
    }
}

@media (max-width: 480px) {
    .animated-header {
        font-size: 2rem;
        letter-spacing: 1px;
    }
}


